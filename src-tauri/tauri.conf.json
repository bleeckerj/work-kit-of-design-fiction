{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "work-kit-of-design-fiction",
  "version": "0.1.0",
  "identifier": "com.work-kit-of-design-fiction.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "width": 1100,
        "height": 900,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true,
        "title" : "Work Kit of Design Fiction",
        "decorations" : true,
        "transparent" : true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
